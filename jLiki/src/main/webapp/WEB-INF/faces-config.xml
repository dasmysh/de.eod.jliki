<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  <application>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>en</supported-locale>
      <supported-locale>de</supported-locale>
    </locale-config>
    <resource-bundle>
      <base-name>de.eod.jliki.ApplicationResources</base-name>
      <var>msg</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>de.eod.jliki.users.LoginResources</base-name>
      <var>loginMsg</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>de.eod.jliki.config.ConfigResources</base-name>
      <var>configMsg</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>de.eod.jliki.documents.DocResources</base-name>
      <var>docMsg</var>
    </resource-bundle>
  </application>
  <validator>
    <validator-id>captchaValidator</validator-id>
    <validator-class>de.eod.jliki.users.servlets.CaptchaValidator</validator-class>
  </validator>
</faces-config>
